<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="1"
    android:rowCount="5">
    <GridLayout
        android:layout_width="match_parent"
        android:layout_column="0"
        android:layout_row="0"
        android:columnCount="1"
        android:rowCount="4">
        <TextView
            android:layout_column="0"
            android:layout_row="0"
            android:textSize="10sp"
            android:text="@string/txtGameName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"/>
        <TextView
            android:layout_column="0"
            android:layout_row="1"
            android:textSize="20sp"
            android:text="@string/txtGameName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvWaitingGameName"
            android:layout_gravity="center" />
        <TextView
            android:layout_column="0"
            android:layout_row="2"
            android:textSize="10sp"
            android:text="@string/txtSearcher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"/>
        <TextView
            android:layout_column="0"
            android:layout_row="3"
            android:textSize="20sp"
            android:text="@string/txtSearcher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvWaitingSearcher"
            android:layout_gravity="center" />
    </GridLayout>
    <TextView
        android:layout_column="0"
        android:layout_row="1"
        android:textSize="20sp"
        android:id="@+id/tvWaitingTimer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:text="@string/txtTimerVal"
        android:layout_gravity="center"/>
    <GridLayout
        android:layout_width="match_parent"
        android:layout_column="0"
        android:layout_row="2"
        android:columnCount="2"
        android:rowCount="2">
        <TextView
            android:textColor="@color/black"
            android:layout_column="0"
            android:layout_row="0"
            android:text="@string/txtCatched"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />
        <TextView
            android:textColor="@color/black"
            android:layout_column="1"
            android:layout_row="0"
            android:text="@string/txtToCatch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />
    </GridLayout>
    <GridLayout
        android:layout_width="match_parent"
        android:layout_column="0"
        android:layout_row="3"
        android:columnCount="2"
        android:rowCount="2">
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ListView
                android:layout_height="300sp"
                android:layout_gravity="center"
                android:id="@+id/lvWaitingCatched"
                android:layout_width="match_parent"
                android:layout_weight=".50"
                android:background="@color/lightGray">
            </ListView>
            <ListView
                android:layout_height="300sp"
                android:layout_width="match_parent"
                android:layout_weight=".50"
                android:layout_gravity="center"
                android:id="@+id/lvWaitingToCatch"
                android:background="@color/lightGray">
            </ListView>
        </TableRow>
    </GridLayout>
    <Button
        android:layout_column="0"
        android:layout_row="4"
        android:layout_width="match_parent"
        android:id="@+id/btnWaitingQuit"
        android:text="@string/txtBtnExit"/>
</GridLayout>